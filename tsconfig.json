{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6", "es2016"],
        "types": ["node"],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "experimentalDecorators": true
    },
    "exclude": ["dist", "node_modules", "src/**/*.spec.ts"],
    "include": ["src"]
}
